{
  "name": "Crucible Card Translate",
  "version": "1.0",
  "description": "Changes the Card Language on thecrucible.online",
  "web_accessible_resources": ["mouseover.js"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Translate!"
  },
  "permissions": [
    "https://www.thecrucible.online/*",
    "http://www.thecrucible.online/*",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "images/icons/icon16.png",
    "32": "images/icons/icon32.png",
    "64": "images/icons/icon64.png",
    "128": "images/icons/icon128.png"
  },
  "manifest_version": 2
}
